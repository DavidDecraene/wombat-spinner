{
  "name": "wombat-spinner-demo",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "ng": "ng",
    "prestart": "npm run buildLibrary",
    "start": "ng serve --port 4300",
    "buildDemo": "ng build ",
    "build": "npm run clean && npm run buildLibrary && ng build --prod --delete-output-path=false --output-hashing=none --base-href ./",
    "test": "ng test",
    "lint": "ng lint",
    "buildLibrary": "ng build --prod wombat-spinner",
    "postbuildLibrary": "cpx 'projects/wombat-spinner/*.md' 'dist/wombat-spinner'",
    "prerelease": "npm run buildLibrary",
    "release": "cd 'dist/wombat-spinner' && npm publish"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "8.0.0",
    "@angular/common": "8.0.0",
    "@angular/compiler": "8.0.0",
    "@angular/core": "8.0.0",
    "@angular/forms": "8.0.0",
    "@angular/platform-browser": "8.0.0",
    "@angular/platform-browser-dynamic": "8.0.0",
    "@fortawesome/fontawesome-free": "^5.5.0",
    "core-js": "^2.4.1",
    "rxjs": "6.5.2",
    "zone.js": "^0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.800.2",
    "@angular-devkit/build-ng-packagr": "0.800.2",
    "@angular/cli": "8.0.2",
    "@angular/compiler-cli": "8.0.0",
    "@angular/language-service": "8.0.0",
    "@types/node": "^10.12.9",
    "codelyzer": "^5.0.0",
    "cpx": "1.5.0",
    "ng-packagr": "^5.3.0",
    "protractor": "^5.4.1",
    "rimraf": "2.5.4",
    "ts-node": "~4.1.0",
    "tsickle": ">=0.27.3",
    "tslib": "^1.7.1",
    "tslint": "~5.9.1",
    "typescript": "3.4.5"
  }
}
